@model Programming_Recipes.Models.Recipe

@{
    ViewBag.Title = "حذف وصفة ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>حذف وصفة </h2>

<h3>هل أنت متأكد من حذف الوصفة؟</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Language.LanguageName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language.LanguageName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecipeTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecipeTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecipeContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.RecipeContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecipeFile)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecipeFile)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("العودة إلى قائمة الوصفات", "Index")
        </div>
    }
</div>
